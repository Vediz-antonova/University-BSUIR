<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_353504_Antonava_Lab4.Calculator">
    <ContentPage.Resources>
        <Style x:Key="BaseCalculatorButtonStyle"
               TargetType="Button">
            <Setter Property="WidthRequest"
                    Value="80"/>
            <Setter Property="HeightRequest"
                    Value="80"/>
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="FontSize"
                    Value="32"/>
            <Setter Property="FontAttributes"
                    Value="Bold"/>
        </Style>
        <Style x:Key="NumberButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseCalculatorButtonStyle}">
            <Setter Property="BackgroundColor"
                    Value="LightGray"/>
        </Style>
        <Style x:Key="OperatorButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseCalculatorButtonStyle}">
            <Setter Property="BackgroundColor"
                    Value="DimGray"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="200,*">
        <Border StrokeShape="RoundRectangle 0 0 15 15"
                Background = "LightGray">
            <VerticalStackLayout>
                <Entry x:Name="DisplayEntry" 
                       HorizontalTextAlignment="End" 
                       TextColor="Black"
                       FontSize="75"/>
                <Label HorizontalTextAlignment="End"
                       FontSize="50"/>
            </VerticalStackLayout>
        </Border>
        <Grid Grid.Row="1"
            RowDefinitions="*, *, *, *, *"
            ColumnDefinitions="*, *, *, *">

            <!-- Row 1 -->
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource BaseCalculatorButtonStyle}"
                    BackgroundColor="LightGreen"
                    Clicked="OnClearButtonClicked"
                    Text="AC"/>
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource OperatorButtonStyle}"
                    Clicked="OnOperatorButtonClicked"
                    Text="%"/>
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"
                    Clicked="OnOperatorButtonClicked"
                    Text="/"/>
            <Button Grid.Row="0"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Clicked="OnOperatorButtonClicked"
                    Text="+"/>

            <!-- Row 2 -->
            <Button Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="7"/>
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="8"/>
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="9"/>
            <Button Grid.Row="1"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Clicked="OnOperatorButtonClicked"
                    Text="*"/>

            <!-- Row 3 -->
            <Button Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="4"/>
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="5"/>
            <Button Grid.Row="2"
                    Grid.Column="2"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="6"/>
            <Button Grid.Row="2"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Clicked="OnOperatorButtonClicked"
                    Text="-"/>

            <!-- Row 4 -->
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="3"/>
            <Button Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="2"/>
            <Button Grid.Row="3"
                    Grid.Column="2"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="1"/>
            <Button Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Clicked="OnOperatorButtonClicked"
                    Text="+"/>

            <!-- Row 5 -->
            <Button Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDeleteButtonClicked"
                    Text="DE"/>
            <Button Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text="0"/>
            <Button Grid.Row="4"
                    Grid.Column="2"
                    Style="{StaticResource NumberButtonStyle}"
                    Clicked="OnDigitButtonClicked"
                    Text=","/>
            <Button Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"
                    Clicked="OnEqualButtonClicked"
                    Text="="/>
        </Grid>
    </Grid>
</ContentPage>