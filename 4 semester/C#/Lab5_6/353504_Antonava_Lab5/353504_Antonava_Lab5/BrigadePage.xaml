<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_353504_Antonava_Lab5.BrigadePage"
             Title="BrigadePage">
    
    <StackLayout Padding="10">
        <Picker x:Name="brigadePicker" 
                Title="Выберите бригаду" 
                SelectedIndexChanged="BrigadePicker_SelectedIndexChanged" />
        <CollectionView x:Name="worksCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}" FontSize="18" Padding="5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>