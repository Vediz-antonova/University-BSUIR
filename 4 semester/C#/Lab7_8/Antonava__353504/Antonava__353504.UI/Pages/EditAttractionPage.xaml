<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Antonava__353504.UI.ViewModels"
             x:DataType="vm:EditAttractionViewModel"
             x:Class="Antonava__353504.UI.Pages.EditAttractionPage">
    
    <StackLayout Padding="10">
        <Label Text="Редактирование достопримечательности" FontSize="20" HorizontalOptions="Center" />
        <Entry Placeholder="Название" Text="{Binding Name}" />
        <Entry Placeholder="Стоимость входа" Text="{Binding EntranceFee}" Keyboard="Numeric" />
        <Entry Placeholder="ID туристического маршрута" Text="{Binding TouristRouteId}" />
        <Button Text="Сохранить" Command="{Binding SaveEditCommand}" />
    </StackLayout>
</ContentPage>