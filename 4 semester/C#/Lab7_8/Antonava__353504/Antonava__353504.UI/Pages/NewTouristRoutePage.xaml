<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Antonava__353504.UI.Pages.NewTouristRoutePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Antonava__353504.UI.ViewModels"
    x:DataType="vm:NewTouristRouteViewModel"
    Title="Создание маршрута">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                <Label Text="Название маршрута" />
                <Entry Text="{Binding RouteName}" Placeholder="Введите название маршрута" />

                <Label Text="Дата начала" />
                <DatePicker Date="{Binding CommenceFrom}" />

                <Label Text="Длительность (дней)" />
                <Entry Text="{Binding Duration}" Keyboard="Numeric" />

                <Button Text="Создать маршрут"
                        Command="{Binding SaveNewTouristRouteCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
