@model ListModel<WEB_353504_Antonava_Lab3.Domain.Entities.Product>

@{
    ViewData["Title"] = "Каталог";
    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();

    var categories = ViewData["categories"] as List<WEB_353504_Antonava_Lab3.Domain.Entities.Category>;
    var currentCategory = ViewData["currentCategory"] as string;

    string? category = request.Query["category"].ToString();
    int prev = Model.CurrentPage == 1 ? 1 : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages ? Model.TotalPages : Model.CurrentPage + 1;
}

<h1>Каталог товаров</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить товар</a>
</p>

<div class="mb-4">
    <ul class="nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle btn btn-outline-secondary"
               data-bs-toggle="dropdown"
               href="#"
               role="button"
               aria-expanded="false">
                @currentCategory
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                       asp-controller="Product"
                       asp-action="Index"
                       asp-route-category="">
                        Все категории
                    </a>
                </li>
                @foreach (var item in categories)
                {
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Product"
                           asp-action="Index"
                           asp-route-category="@item.NormalizedName">
                            @item.Name
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</div>

<div class="container mt-4">
    <h2 class="mb-4">Каталог товаров</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Items)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImagePath" class="card-img-top" alt="@item.Name" style="object-fit: cover; height: 400px;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><em>Вес: @item.Weight кг</em></p>
                        <div class="mt-auto">
                            <a asp-controller="Cart"
                               asp-action="Add"
                               asp-route-id="@item.Id"
                               asp-route-returnurl="@returnUrl"
                               class="btn btn-primary w-100">
                                Добавить в корзину
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-controller="Product"
               asp-action="Index"
               asp-route-category="@category"
               asp-route-pageNo="@prev">
                «
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link"
                   asp-controller="Product"
                   asp-action="Index"
                   asp-route-category="@category"
                   asp-route-pageNo="@i">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-controller="Product"
               asp-action="Index"
               asp-route-category="@category"
               asp-route-pageNo="@next">
                »
            </a>
        </li>
    </ul>
</nav>
